<main>
  <article>
    <h1>
      <a href="{{@article.url}}" class="main-link">{{@article.title}}</a>
    </h1>
    <small>({{@article.domain}})</small>
    <p>{{@article.points}} points by {{@article.user}}</p>
  </article>
  <div>
    <h2>{{@article.comments_count}} comments</h2>
    <section>
      <div>
        {{#each @comments key="id" as |comment|}}
          <comment-item @comment={{comment}} as |nestedComment|>
            {{#each nestedComment key="id" as |commment|}}
              <comment-item @comment={{comment}} />
            {{/each}}
          </comment-item>
        {{/each}}
      </div>
    </section>
  </div>
</main>
